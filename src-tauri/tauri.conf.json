{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OffLeaf",
  "version": "1.0.0",
  "identifier": "com.offleaf.editor",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "OffLeaf - LaTeX Editor",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "scripts/*"
    ],
    "category": "Productivity",
    "shortDescription": "Offline LaTeX Editor",
    "longDescription": "A powerful offline LaTeX editor with XeLaTeX support. Includes automatic package detection and installation. Supports XeLaTeX, pdfLaTeX, and LuaLaTeX.",
    "copyright": "MIT License",
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "wix": {
        "language": "en-US"
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
